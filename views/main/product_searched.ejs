<% layout('layout') -%>

<div class="wrapper my-5">
  <h4>Search Results for: <%= search_term %></h4>
  <hr />
  <% if (products.length === 0) { %>
  <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h6 class="display-4">No Products !!!</h6>
  </div>
  <div class="text-center">
    <img class="rounded" src="/assets/no-product-found.png" alt="" srcset="" />
  </div>

  <% } else { %>

  <div class="list-group">
    <% for (var i=0; i< products.length; i++) { %>
    <span class="list-group-item">
      <div class="row" id="searchResults">
        <div class="col-md-4">
          <img
            class="img-fluid searchedProduct__images"
            src="<%= products[i].image %>"
            alt=""
          />
        </div>
        <div class="col-md-8 caption">
          <h2 class="searched-product__heading"><%= products[i].name %></h2>
          <p class="searched-product__description">
            <%= products[i].description %>
          </p>
          <p class="searched-product__price">
            <i class="fas fa-euro-sign"></i>
            <%= products[i].price %>
          </p>
        </div>
        <div class="col-md-2">
          <a
            class="btn btn-outline-info more-info my-3"
            href="/product/<%= products[i]._id %>"
            >More Info</a
          >
        </div>
      </div>
    </span>
    <% } %>
  </div>
  <% } %>
</div>
